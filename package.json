{
  "name": "the-shed-upholstery",
  "version": "1.4.0",
  "private": true,
  "description": "Node custom Bootstrap upholstery site using bootstrap-npm-starter template",
  "author": "Simon Bertram",
  "license": "MIT",
  "scripts": {
    "build": "npm run css",
    "css-compile": "sass --source-map --embed-sources --no-error-css --load-path=node_modules scss/:assets/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace assets/css/main.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --variables --css assets/css/main.css --content *.html \"node_modules/bootstrap/js/dist/dom/*.js\" \"node_modules/bootstrap/js/dist/{base-component,dropdown,modal,offcanvas}.js\" --output assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "server": "serve --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm-run-all css-lint css"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.3",
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "bootswatch": "^5.1.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.7",
    "postcss-cli": "^8.3.1",
    "purgecss": "^4.1.3",
    "sass": "^1.49.9",
    "serve": "^13.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-twbs-bootstrap": "^2.2.3"
  }
}
